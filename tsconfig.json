{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "@components*": ["src/components*"],
      "@elements*": ["src/elements*"],
      "@features*": ["src/features*"],
      "@experimentals*": ["src/experimentals*"],
      "@layouts*": ["src/layouts*"],
      "@utils*": ["src/utilities*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src", "stories"]
}
